<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCenterActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginVertical="24dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:tint="@color/colorPrimary"
            android:layout_marginRight="36dp"
            android:src="@drawable/activities_logo"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textColor="#000"
            android:gravity="center"
            android:textSize="30sp"
            android:text="Activities Center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Engage, Involve, Be Creative!"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="#000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="24dp"
        android:background="@color/colorPrimaryLight">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/virtual_garden"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="Virtual Gardening"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/meditation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="Let's Meditate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/yoga_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="Time for Yoga"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/music_therapy_window"
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/music_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="Music Therapy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/puzzle_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="Crack Some Puzzles"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/book_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="Dive into Books"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <ImageView
        android:id="@+id/back_button"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:src="@drawable/ic_keyboard_backspace_24px_1"
        />


</LinearLayout>