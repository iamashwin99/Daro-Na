<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FAQActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginVertical="24dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:tint="@color/colorPrimary"
            android:layout_marginRight="36dp"
            android:src="@drawable/faqs_logo"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textColor="#000"
            android:gravity="center"
            android:textSize="30sp"
            android:text="FAQ's on COVID-19"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="24dp"
        android:background="@color/colorPrimaryLight">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/about_faq"
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">
                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="About"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/symptoms_faq"
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">
                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="Symptoms"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/spread_faq"
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="Spread"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">
                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="Prevention &amp; Protection"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="Investigations"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:paddingVertical="6dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginVertical="18dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:gravity="center"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text="Treatment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <ImageView
        android:id="@+id/back_button"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:src="@drawable/ic_keyboard_backspace_24px_1"
        />
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collected from covid.bhaarat.ai"/>

</LinearLayout>